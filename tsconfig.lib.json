{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "composite": true,
    "types": [
      "node"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "index.ts"
  ]
}